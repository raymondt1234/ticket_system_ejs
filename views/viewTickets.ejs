<%- include("header") -%>

    <h1>Tickets</h1>
    <table>
        <tr>
            <th>Submitted By</th>
            <th>Closed By</th>
            <th>Category</th>
            <th>Date/Time Submitted</th>
            <th>Subject</th>
        </tr>
        <% tickets.forEach(ticket=> { %>
            <tr>
                <td>
                    <%= ticket.submittedBy %>
                </td>
                <td>
                    <%= ticket.closedBy %>
                </td>
                <td>
                    <%= ticket.category %>
                </td>
                <td>
                    <%= moment(ticket.dateTimeSubmitted).format('h:mm:ss a Do MMMM, YYYY'); %>
                </td>
                <td>
                    <%= ticket.subject %>
                </td>
            </tr>
        <% }); %>
    </table>

    <%- include("footer") -%>